<h1>New post page</h1>

<% if @post.errors.present? %>
  <%= @post.errors.full_messages.join(', ') %>
<% end %>

<%= form_for @post do |f| %>
<div class="">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>

  <%= f.submit %>

<% end %>
