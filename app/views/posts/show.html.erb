<h1>Post page</h1>

<div class="form-group">
  <h3><%= @post.title %></h3>
  <p><%= @post.body %></p>
</div>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), method: :delete %>
<hr>

<h1>Comment</h1>

<div class="form-group">
  <%= form_for ([@post, @comment]) do |f| %>
    <%= f.text_area :body %>
    <%= f.submit  %>
  <% end  %>
</div>


<% @comments&.each do |comment| %>
<div class="">
  <%= comment.body %>
  <hr>
</div>
<% end %>
